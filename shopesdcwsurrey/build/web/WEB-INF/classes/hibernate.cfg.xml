<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.DerbyDialect</property>
    <property name="hibernate.connection.driver_class">org.apache.derby.jdbc.ClientDriver</property>
    <property name="hibernate.connection.url">jdbc:derby://localhost:1527/bookshop</property>
    <property name="hibernate.connection.username">bookshop</property>
    <property name="hibernate.connection.password">bookshop</property>
    <mapping resource="ProductDetails.hbm.xml"/>
    <mapping resource="UserDetails.hbm.xml"/>
    <mapping resource="OrderDetails.hbm.xml"/>
    <mapping resource="Comment_Rating.hbm.xml"/>
    <mapping resource="RoleDetails.hbm.xml"/>
    <mapping resource="User_role.hbm.xml"/>
    <mapping resource="Comment_Rating.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
